{
  "name": "franc-bin",
  "repository": {
    "type": "git",
    "url": "https://github.com/avvertix/franc-bin"
  },
  "version": "1.0.0",
  "description": "Franc CLI... as a binary file",
  "main": "node_modules/franc-cli/index.js",
  "bin": "node_modules/franc-cli/index.js",
  "author": "Alessio Vertemati",
  "license": "MIT",
  "dependencies": {
    "franc": "^5.0.0",
    "franc-cli": "^6.0.1"
  },
  "devDependencies": {
    "pkg": "^4.4.8"
  },
  "scripts": {
    "run": "franc",
    "production": "pkg --out-dir=dist . "
  },
  "pkg": {
    "assets": [
      "package.json"
    ],
    "targets": [
      "node12-macos-x64",
      "node12-linux-x64",
      "node12-win-x64"
    ]
  }
}
