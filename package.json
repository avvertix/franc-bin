{
  "name": "franc-bin",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/avvertix/franc-bin"
  },
  "version": "0.2.0",
  "description": "Franc CLI... as a binary file",
  "main": "node_modules/franc-cli/index.js",
  "bin": "node_modules/franc-cli/index.js",
  "author": "Alessio Vertemati",
  "license": "MIT",
  "dependencies": {
    "franc": "^4.0.0",
    "franc-cli": "^5.0.0"
  },
  "devDependencies": {
    "pkg": "~4.3.7"
  },
  "scripts": {
    "run": "franc",
    "production": "pkg --out-dir=dist . "
  },
  "pkg": {
    "assets": [
      "package.json"
    ],
    "targets": [
      "node10-macos-x64",
      "node10-linux-x64",
      "node10-win-x64"
    ]
